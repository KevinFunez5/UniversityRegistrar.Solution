@{
  Layout = "_Layout";
}

@model University.Models.Department

  <h3>Add a Course</h3>
  <hr>

  <h4>Add a course to this department: @Html.DisplayFor(model => model.DepartmentName)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.DepartmentId)

    <div class="form-group">

      @Html.Label("Select Course")
      @Html.DropDownList("CourseId", null, new { @class = "form-control"})
    </div>
    <br>
    <input type="submit" value="Save" class="btn btn-dark"/>
  }
  <br>
  <p class="btn btn-dark">@Html.ActionLink("Back to Departments", "Index")</p>