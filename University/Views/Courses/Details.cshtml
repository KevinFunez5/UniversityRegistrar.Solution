@{
  Layout = "_Layout";
}

@model University.Models.Course;

<h3>Course Details</h3>
<hr />
<h3>@Html.DisplayNameFor(model => model.CourseName): @Html.DisplayFor(model => model.CourseName)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This course does not contain any students</p>
}
else
{
  <h4>Students in this course are:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Student.Name</li>
  }
  </ul>
}

<p class="btn btn-dark">@Html.ActionLink("Back to Courses", "Index")</p>
<p class="btn btn-dark">@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
<p class="btn btn-dark">@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>