@{
  Layout = "_Layout";
}

@using University.Models;

<h1>Courses</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
} 

<ul>
  @foreach(Course course in Model)
  {
    <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId })</li>
  }
</ul>

<p class="btn btn-dark">@Html.ActionLink("Add New Course", "Create")</p>
<p class="btn btn-dark">@Html.ActionLink("Home", "Index", "Home")</p>