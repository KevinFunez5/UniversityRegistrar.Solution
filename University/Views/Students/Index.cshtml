@{
  Layout = "_Layout";
}

@using University.Models;
@model List<University.Models.Student>;

<h1>Students:</h1>
<hr>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
} 

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
}

<br>
<p class="btn btn-dark">@Html.ActionLink("Add New Student", "Create")</p>
<p class="btn btn-dark">@Html.ActionLink("Add A Course", "AddCourse")</p>
<p class="btn btn-dark">@Html.ActionLink("Home", "Index", "Home")</p>