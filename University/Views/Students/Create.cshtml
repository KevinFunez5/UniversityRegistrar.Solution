@{
  Layout = "_Layout";
}

@model University.Models.Student

<h3>Add a Student and Course</h3>
<hr>

@using (Html.BeginForm())
{
  <div class = "form-group">
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {@class = "form-control", @required= "required"})

    @Html.Label("Select Course")
    @Html.DropDownList("CourseId", null, new { @class = "form-control" })
  </div>

  <input type="submit" value="Add New Student" class="btn btn-dark"/>

}

<br>
<p class="btn btn-dark">@Html.ActionLink("Show All Students", "Index")</p>